<UserControl x:Class="DataInputAnalysis.Control.FileUploader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
   	>

    <Grid Margin="10" x:Name="LayoutRoot" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Margin="0,0,5,0" Name="Address" Text="No file selected..."/>
        <Button Grid.Column="1" Content="Browse" Name="BrowseButton"/>        
        <TextBox Grid.Row="1" Grid.ColumnSpan="2" Text="Uploading, Please wait ..." Visibility="Collapsed" Name="uploadTextBlock"></TextBox>
    </Grid>

</UserControl>
